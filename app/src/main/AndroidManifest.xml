    <uses-permission android:name="android.permission.ACCESS_COARSE_UPDATES" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.FlashScoreX"
        tools:targetApi="31">
        <activity
            android:name=".ui.player.DetailPlayerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.leagueInfo.match.DetailMatchActivity"
            android:exported="false" />
        <activity
            android:name=".ui.launch.LaunchActivity"
            android:exported="true">
<!--            android:theme="@style/Theme.App.Starting"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".base.BaseActivity"
            android:exported="false" />
        <activity
            android:name=".ui.leagueInfo.LeagueActivity"
            android:exported="false" />
        <activity
            android:name=".ui.dashboard.DashBoardActivity"
            android:exported="true" />

        <receiver
            android:name=".ui.dashboard.NoticeReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>